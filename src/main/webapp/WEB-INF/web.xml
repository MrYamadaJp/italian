<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Italian</display-name>

    <!-- Servlets -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <servlet-class>servlet.CustomerLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <servlet-class>servlet.CustomerRegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerRegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CustomerLogoutServlet</servlet-name>
        <servlet-class>servlet.CustomerLogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerLogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationFormServlet</servlet-name>
        <servlet-class>servlet.ReservationFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationFormServlet</servlet-name>
        <url-pattern>/reservations/form</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationCreateServlet</servlet-name>
        <servlet-class>servlet.ReservationCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationCreateServlet</servlet-name>
        <url-pattern>/reservations/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationListServlet</servlet-name>
        <servlet-class>servlet.ReservationListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationListServlet</servlet-name>
        <url-pattern>/reservations</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationCancelServlet</servlet-name>
        <servlet-class>servlet.ReservationCancelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationCancelServlet</servlet-name>
        <url-pattern>/reservations/cancel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MenuPublicServlet</servlet-name>
        <servlet-class>servlet.MenuPublicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuPublicServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MenuAdminServlet</servlet-name>
        <servlet-class>servlet.MenuAdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuAdminServlet</servlet-name>
        <url-pattern>/admin/menu</url-pattern>
    </servlet-mapping>

    <!-- Filters -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filters.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Remember-me filter temporarily disabled to allow startup; re-enable after deployment is stable
    <filter>
        <filter-name>RememberMeFilter</filter-name>
        <filter-class>filters.RememberMeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RememberMeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    -->
    <filter>
        <filter-name>CustomerAuthFilter</filter-name>
        <filter-class>filters.CustomerAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CustomerAuthFilter</filter-name>
        <url-pattern>/reservations/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CustomerAuthFilter</filter-name>
        <url-pattern>/account/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AdminAuthFilter</filter-name>
        <filter-class>filters.AdminAuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminAuthFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
        <welcome-file>jsp/home.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Ensure static resources under /assets are served by DefaultServlet -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

</web-app>



